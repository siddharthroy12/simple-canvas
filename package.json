{
  "name": "simple-canvas",
  "description": "A simple library for making graphics and games using Canvas API",
  "author": "Siddharth Roy",
  "private": false,
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\""
  },
  "files": [
    "dist"
  ],
  "main": "./dist/simpleCanvas.umd.js",
  "module": "./dist/simpleCanvas.es.js",
  "exports": {
    ".": {
      "import": "./dist/simpleCanvas.es.js",
      "require": "./dist/simpleCanvas.umd.js"
    }
  }
}
